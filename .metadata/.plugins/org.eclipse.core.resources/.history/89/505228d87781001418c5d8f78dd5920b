package servlets;

import java.io.IOException;
import java.io.PrintWriter;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

@WebServlet("/alta")
public class ServletAlta extends HttpServlet {
	private static final long serialVersionUID = 1L;
       
  
    public ServletAlta() {
        super();
    }
    
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		request.getRequestDispatcher("/alta.jsp").forward(request, response);
	}

	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		double precioBase;
		double peso;
		String descripcion;
		String color;
		String consumo;
		double resolucion;
		boolean TDT;
		
		try {
			precioBase = Double.parseDouble(request.getParameter("precioBase"));
			peso = Double.parseDouble(request.getParameter("peso"));
			resolucion = Double.parseDouble(request.getParameter("resolucion"));
		} catch (NumberFormatException e) {
			e.printStackTrace();
		//hacer algo copado con los errores
		//tener en cuenta que el usuario es experto, asi que no hay errores
		
		}
		
		
		
		
		
	}

}
